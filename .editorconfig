# Root EditorConfig file to maintain consistent coding style across editors and IDEs
root = true

# Default settings for all files
[*]
# Set character encoding to UTF-8
charset = utf-8
# Use LF (Unix-style) for line endings
end_of_line = lf
# Use tabs for indentation
indent_style = tab
# Set indentation size to 4 tabs
indent_size = 4
# Ensure a newline is present at end of files
insert_final_newline = true
# Remove trailing whitespace
trim_trailing_whitespace = true

# Override for text files (preserve trailing whitespace)
[*.txt]
trim_trailing_whitespace = false
insert_final_newline = false

# Override for Markdown, YAML files
[*.{md,yml}]
indent_size = 2

# Override for JSON files (use tabs but keep indent size as 2)
[*.json]
indent_size = 2

# Override for JavaScript, TypeScript, and JSX/TSX files
[*.{js,mjs,cjs,jsx,ts,tsx}]
indent_size = 4

# Override for CSS, SCSS files
[*.{css,scss}]
indent_size = 4
